{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./lib"
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
